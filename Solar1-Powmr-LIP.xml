  - platform: modbus_controller
    modbus_controller_id: inverter1
    name: "Inverter 1 - Output Current"
    address: 206
    register_type: holding
    value_type: U_WORD
    state_class: measurement
    unit_of_measurement: "A"
    device_class: current
    accuracy_decimals: 1
    filters:
      - multiply: 0.1   



  - platform: modbus_controller
    modbus_controller_id: inverter1
