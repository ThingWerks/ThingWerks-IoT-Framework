esphome:
  name: esp-solar
  friendly_name: ESP-Solar
esp32:
  board: esp32dev
  framework:
    type: arduino
logger:
api:
  encryption:
    key: "====="
ota:
  - platform: esphome
    password: "====="
wifi:
  networks:
  - ssid: "iot-solar"
    hidden: true
  fast_connect: true
  output_power: 20dB
  power_save_mode: none
  manual_ip:
    static_ip: 10.21.0.32
    gateway: 10.21.0.1
    subnet: 255.255.254.0 
    dns1: 10.21.0.1
  ap:
    ssid: "Test Fallback Hotspot"
    password: "===="
captive_portal:
interval:
  - interval: 1s # Run this sequence every 10 seconds (adjust as needed)
    then:
      - logger.log: "Starting PZEM update sequence..."
      - component.update: pzem_a1  # <--- Corrected action name
      - delay: 50ms
      - component.update: pzem_a2  # <--- Corrected action name
      # No delay needed after the last one
      - logger.log: "Finished PZEM update sequence."


uart:
  - id: uart_inverter
    baud_rate: 9600
    tx_pin: GPIO26
    rx_pin: GPIO27
    stop_bits: 1
    parity: NONE
  - id: uart_pzem
    rx_pin: GPIO13
    tx_pin: GPIO14
    baud_rate: 9600
    data_bits: 8
    stop_bits: 1
    parity: NONE


modbus:
  - id: modbus_inverter
    uart_id: uart_inverter
    send_wait_time: 500ms
  - id: modbus_pzem
    uart_id: uart_pzem
    send_wait_time: 250ms
modbus_controller:
  - id: inverter1    
    address: 0x01
    modbus_id: modbus_inverter
    setup_priority: -10
    offline_skip_updates: 10
    update_interval: 1s
 #   command_throttle: 350ms
  - id: inverter2    
    address: 0x02
    modbus_id: modbus_inverter
    setup_priority: -10
    offline_skip_updates: 10
    update_interval: 1s
   # command_throttle: 350ms


sensor:


  - platform: wifi_signal
    name: "wifi-solar"
    update_interval: 5s


  - platform: pzemac
    id: pzem_a1
    modbus_id: modbus_pzem
    address: 0xA1
    current:
      name: "PZEM-Daren Amps"
      accuracy_decimals: 1
    voltage:
      name: "PZEM-Daren Volts"
      accuracy_decimals: 0
    energy:
      name: "PZEM-Daren Meter"
    power:
      name: "PZEM-Daren Watts"
      accuracy_decimals: 0
    frequency:
      name: "PZEM-Daren Hz"
    power_factor:
      name: "PZEM-Daren PF"
  - platform: pzemac
    id: pzem_a2
    modbus_id: modbus_pzem
    address: 0xA2
    current:
      name: "PZEM-Alvarez Amps"
